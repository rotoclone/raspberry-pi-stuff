[Unit]
Description=Rotoclone Zone Webserver
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
WorkingDirectory=/home/pi/rotoclone-zone/
ExecStart=/home/pi/rotoclone-zone/rotoclone-zone
User=pi
Restart=on-failure
RestartSec=1
StandardOutput=append:/home/pi/rotoclone-zone/logs.txt
StandardError=append:/home/pi/rotoclone-zone/logs.txt

[Install]
WantedBy=multi-user.target
