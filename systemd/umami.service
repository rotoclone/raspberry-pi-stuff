[Unit]
Description=Umami
After=network.target
Wants=postgresql.service
StartLimitIntervalSec=0

[Service]
Type=simple
WorkingDirectory=/home/pi/git/umami/
ExecStart=npm start
User=pi
Restart=on-failure
RestartSec=1
StandardOutput=append:/home/pi/git/umami/server_logs.txt
StandardError=append:/home/pi/git/umami/server_logs.txt

[Install]
WantedBy=multi-user.target
