[Unit]
Description=Blog Server
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
WorkingDirectory=/home/pi/blog-server/
ExecStart=/home/pi/blog-server/blog-server
User=pi
Restart=on-failure
RestartSec=1
StandardOutput=append:/home/pi/blog-server/logs.txt
StandardError=append:/home/pi/blog-server/logs.txt

[Install]
WantedBy=multi-user.target
