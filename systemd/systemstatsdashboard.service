[Unit]
Description=System Stats Dashboard
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
WorkingDirectory=/home/pi/system-stats-dashboard/
ExecStart=/home/pi/system-stats-dashboard/system-stats-dashboard
User=pi
Restart=on-failure
RestartSec=1
StandardOutput=append:/home/pi/system-stats-dashboard/logs.txt
StandardError=append:/home/pi/system-stats-dashboard/logs.txt

[Install]
WantedBy=multi-user.target
